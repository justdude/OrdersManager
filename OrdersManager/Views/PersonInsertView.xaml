<Controls:Window x:Class="OrdersManager.Views.PersonInsertView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Elysium.Controls;assembly=Elysium"
        xmlns:metro="http://schemas.codeplex.com/elysium"
        xmlns:params="http://schemas.codeplex.com/elysium/params"
        xmlns:local="clr-namespace:OrdersManager.ModelView"
        xmlns:mvvvm="clr-namespace:MVVM"
        xmlns:selector="clr-namespace:OrdersManager.TemplateSelector"
        xmlns:view="clr-namespace:OrdersManager.Views"
                 
        WindowStartupLocation="CenterScreen"
        params:Design.Theme="Light"
        params:Manager.Theme="Light" 
        params:Manager.AccentBrush="{x:Static metro:AccentBrushes.Viridian}"
        params:Manager.ContrastBrush="White"
        Title="MainWindow" Height="420" Width="340" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="325*"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" ContentTemplate="{StaticResource PersonTemplate}" >
        </ContentControl>

        <ContentControl Grid.Row="2" ContentTemplate="{StaticResource OkCancel}" >
        </ContentControl>
    </Grid>
</Controls:Window>