    <!--HeaderNode-->
    <HierarchicalDataTemplate DataType="{x:Type mvvvm:HeaderNode}" ItemsSource="{Binding Children}">
        <Border>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TextBlock" FontSize="14" FontStretch="Normal" Text="{Binding Text}" ContextMenu="{StaticResource TreeViewItemContextMenu}">
                </TextBlock>

            </StackPanel>
        </Border>
        <!--<HierarchicalDataTemplate.Triggers>
